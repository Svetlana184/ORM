<Window x:Class="lab12_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab12_13"
        mc:Ignorable="d"
        Title="Лабораторная работа №12-13" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl >
            <TabItem x:Name="lab12">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="10" Width="10" Fill="Black"/>
                        <TextBlock Margin="3">Лабораторная работа 12</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal">
                            <ToolBar>
                                <Button Command="{Binding SaveCommand}">
                                    <Image Source="/Images/save.png"/>
                                </Button>
                                <Separator/>
                                <Button Command="{Binding OpenCommand}">
                                    <Image Source="/Images/open.png"/>
                                </Button>
                                <Separator/>
                            </ToolBar>
                            <ToolBar HorizontalAlignment="Right">
                                <Button Command="{Binding AddCommand}">
                                    <Image Source="/Images/create.png"></Image>
                                </Button>
                                <Button >
                                    <Image Source="/Images/close.png">
                                    </Image>
                                </Button>
                            </ToolBar>
                        </StackPanel>
                        <Menu Height="25" VerticalAlignment="Top" Grid.Row="0">
                            <MenuItem Header="File">
                                <MenuItem Header="Open..."/>
                                <MenuItem Header="Save..."/>
                                <Separator/>
                                <MenuItem Header="Exit"/>
                            </MenuItem>
                            <MenuItem Header="Edit"></MenuItem>
                        </Menu>
                        <ListBox x:Name="docBox" Grid.Row="2" ItemsSource="{Binding Motos}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical" Width="300">
                                            <TextBlock  Text="{Binding Marka}" FontSize="14"/>
                                            <Label />
                                            <TextBlock  Text="{Binding Serial}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Width="300">
                                            <TextBlock  Text="{Binding Year}" FontSize="14"/>
                                            <TextBlock  Text="{Binding YearTech}" FontSize="14"/>
                                            <TextBlock  Text="{Binding Price}" FontSize="14"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StatusBar x:Name="Status" Grid.Row="3" />
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="lab13">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="10" Width="10" Fill="Black"/>
                        <TextBlock Margin="3">Лабораторная работа 13</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>

                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
